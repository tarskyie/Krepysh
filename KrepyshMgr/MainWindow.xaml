<Window x:Class="KrepyshMgr.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KrepyshMgr"
        mc:Ignorable="d"
        Height="450" Width="800"
        Title="Менеджер проектов" MinHeight="450" MinWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <ListBox x:Name="ProjectsListBox" Grid.Column="0" Margin="8" DisplayMemberPath="Name" />
        <ScrollViewer Grid.Column="1" Margin="8">
            <StackPanel Orientation="Vertical">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button x:Name="NewButton" Click="NewButton_Click" Width="120" Margin="0,0,8,0">New project</Button>
                    <Button x:Name="RemoveButton" Click="RemoveButton_Click" Width="120" IsEnabled="False">Remove project</Button>
                    <Button x:Name="RenameButton" Click="RenameButton_Click" Width="120" IsEnabled="False" Margin="8,0,0,0">Rename project</Button>
                </StackPanel>
                <Button x:Name="PathButton" Click="OpenProject">Open Project</Button>
                <TextBlock>Api Url</TextBlock>
                <TextBox x:Name="ApiUrlTextBox" Text="http://127.0.0.1:8080/v1/chat/completions" />
                <TextBlock>Api Url</TextBlock>
                <TextBox x:Name="ApiKeyTextBox" />
                <!-- Deployment, under construction-->
                <TextBlock>Deployment</TextBlock>
                <TextBlock><Hyperlink NavigateUri="https://info.ivantarsky.ru" RequestNavigate="Hyperlink_RequestNavigate">Инструкция</Hyperlink></TextBlock>
                <StackPanel Orientation="Vertical" IsEnabled="False">

                    <TextBox />
                </StackPanel>
                <!-- -->
                <TextBlock x:Name="StatusTextBlock" Margin="0,8,0,0" TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
